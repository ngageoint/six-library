NAME            = 'math.linear'
VERSION         = '0.2'
MODULE_DEPS     = 'sys mem types gsl'

options = configure = distclean = lambda p: None

def build(bld):
    globs = globals()
    if 'HAVE_BOOST' in bld.env and bld.env['HAVE_BOOST']:
        globs['UNITTEST_DEPS'] = 'serialize'
        globs['UNITTEST_USELIB'] = 'BOOST_SERIALIZATION'
    else:
        globs['UNITTEST_FILTER'] = 'test_Matrix2D_serialize.cpp ' + \
                                   'test_Vector_serialize.cpp'

    bld.module(**globs)
